@model IEnumerable<DataAccessLayer.Models.Product>

<h2 class="text-center my-4 text-primary fw-bold">Alle Producten</h2>

<div class="d-flex justify-content-end mb-3">
    <a asp-action="Create" asp-controller="Product" class="btn btn-success shadow-sm">
        <i class="bi bi-plus-circle"></i> Voeg product toe
    </a>
</div>

<table class="table table-hover shadow-sm rounded border border-light-subtle">
    <thead class="table-primary">
        <tr>
            <th>Naam</th>
            <th>Categorie</th>
            <th>Prijs</th>
            <th>Artikelnummer</th>
            <th>Voorraad</th>
            <th>Zichtbaar</th>
            <th>Acties</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Name</td>
                <td>@item.Category</td>
                <td>€ @item.Price.ToString("0.00")</td>
                <td>@item.ArticleNumber</td>
                <td>@item.Stock</td>
                <td>
                    @if (item.IsVisible)
                    {
                        <span class="badge bg-success">Ja</span>
                    }
                    else
                    {
                        <span class="badge bg-danger">Nee</span>
                    }
                </td>
                <td>
                    <a asp-action="ProductBewerken" asp-route-id="@item.Id" class="btn btn-sm btn-outline-primary">
                        <i class="bi bi-pencil-square"></i> Bewerken
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>
