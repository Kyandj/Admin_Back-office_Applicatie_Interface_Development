@model IEnumerable<DataAccessLayer.Models.Product>

<h2 class="text-center my-4 text-primary">Producten Overzicht</h2>

<div class="d-flex justify-content-end mb-3">
    <a asp-action="Create" asp-controller="Product" class="btn btn-success">
        ➕ Nieuw product toevoegen
    </a>
</div>

<table class="table table-striped table-bordered shadow-sm">
    <thead class="table-dark">
        <tr>
            <th>Naam</th>
            <th>Categorie</th>
            <th>Prijs</th>
            <th>Artikelnummer</th>
            <th>Voorraad</th>
            <th>Zichtbaar</th>
            <th>Acties</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Name</td>
                <td>@item.Category</td>
                <td>€ @item.Price.ToString("0.00")</td>
                <td>@item.ArticleNumber</td>
                <td>@item.Stock</td>
                <td>
                    <span class="badge @(item.IsVisible ? "bg-success" : "bg-danger")">
                        @(item.IsVisible ? "Ja" : "Nee")
                    </span>
                </td>
                <td>
                    <a asp-action="ProductBewerken" asp-route-id="@item.Id" class="btn btn-sm btn-outline-primary">
                        ✏️ Bewerken
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>

