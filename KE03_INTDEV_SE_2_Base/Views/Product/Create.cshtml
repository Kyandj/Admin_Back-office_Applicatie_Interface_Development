<div class="main-container">
    <div class="custom-title">Een Product toevoegen</div>
    <a asp-action="AlleProducten" class="back-btn">terug</a>
    <form asp-action="Create" method="post">
        <div class="form-row">
            <!-- Linkerkant: Formulier -->
            <div class="form-section">
                <div>
                    <label asp-for="Name" class="form-label">Naam:</label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div>
                    <label asp-for="Price" class="form-label">Prijs:</label>
                    <input asp-for="Price" class="form-control" />
                    <span asp-validation-for="Price" class="text-danger"></span>
                </div>
                <div>
                    <label asp-for="Stock" class="form-label">Aantal op voorraad:</label>
                    <input asp-for="Stock" class="form-control" />
                    <span asp-validation-for="Stock" class="text-danger"></span>
                </div>
                <div>
                    <label asp-for="Description" class="form-label">Beschrijving:</label>
                    <textarea asp-for="Description" class="form-control"></textarea>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
            </div>
            <!-- Rechterkant: Overige velden -->
            <div class="form-section">
                <div>
                    <label asp-for="Category" class="form-label">Categorie:</label>
                    <input asp-for="Category" class="form-control" />
                    <span asp-validation-for="Category" class="text-danger"></span>
                </div>
                <div>
                    <label asp-for="ArticleNumber" class="form-label">Artikelnummer:</label>
                    <input asp-for="ArticleNumber" class="form-control" />
                    <span asp-validation-for="ArticleNumber" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="ImageUrl" class="form-label"></label>
                    <input asp-for="ImageUrl" class="form-control" />
                    <span asp-validation-for="ImageUrl" class="text-danger"></span>
