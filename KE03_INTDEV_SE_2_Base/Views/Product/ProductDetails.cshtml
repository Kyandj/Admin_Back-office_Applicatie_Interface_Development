@model DataAccessLayer.Models.Product

@{
    ViewData["Title"] = "Product Details";
}

<div class="main-container">
    <a asp-action="AlleProducten" class="btn btn-back">Back to List</a>
    <h2>Product Details</h2>
    <div class="form-responsive-row">
        <!-- Image section first (left) -->
        <div class="image-section">
            @if (!string.IsNullOrEmpty(Model?.ImageUrl))
            {
                <img src="@Model.ImageUrl" alt="Product Image" style="max-width:100%; max-height:100%;" />
            }
            else
            {
                <span style="color:#888;">No image available</span>
            }
        </div>
        <!-- Details section second (right) -->
        <div class="form-section">
            <dl class="row">
                <dt class="col-sm-4">Name</dt>
                <dd class="col-sm-8">@Model.Name</dd>

                <dt class="col-sm-4">Category</dt>
                <dd class="col-sm-8">@Model.Category</dd>

                <dt class="col-sm-4">Price</dt>
                <dd class="col-sm-8">@Model.Price.ToString("C")</dd>

                <dt class="col-sm-4">Article Number</dt>
                <dd class="col-sm-8">@Model.ArticleNumber</dd>

                <dt class="col-sm-4">Stock</dt>
                <dd class="col-sm-8">@Model.Stock</dd>

                <dt class="col-sm-4">Visible</dt>
                <dd class="col-sm-8">@Model.IsVisible</dd>

                <dt class="col-sm-4">Description</dt>
                <dd class="col-sm-8">@Model.Description</dd>
            </dl>
        </div>
    </div>
    <a asp-action="ProductBewerken" asp-route-id="@Model.Id" class="btn btn-edit">Bewerken</a>
    <a asp-action="AlleProducten" class="btn btn-delete">Verwijderen</a>
    <form asp-action="Delete" asp-route-id="@Model.Id" method="post" onsubmit="return confirm('Weet je zeker dat je dit product wilt verwijderen?');">
        <button type="submit" class="btn btn-danger">Verwijderen</button>
    </form>

</div>